<Page x:ConnectionId='1'
    x:Class="Calculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="root"
                          >
    

    <Grid Background="#FFF5EBDA">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="4" Grid.Row="0" HorizontalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding ElementName=root, Path=YNumber,Mode=OneWay}" FontSize="20" TextAlignment="End" />
        </ScrollViewer>
        <ScrollViewer Grid.ColumnSpan="4" Grid.Row="1" HorizontalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding ElementName=root, Path=XNumber, Mode=OneWay}" FontSize="50" TextAlignment="End" />
        </ScrollViewer>

        <Button x:ConnectionId='2' x:Name="Percent" Style="{StaticResource InputButton}" Content="%" 
                                      Grid.Row="2" 
                Grid.Column="0" Background="#FFDEA357"  />
        <Button x:ConnectionId='3' x:Name="OneDiv" Style="{StaticResource InputButton}" Content="1/x" 
                                      
                Grid.Row="3" Grid.Column="0" Background="#FFDEA357" >
            <Button.Foreground>
                <SolidColorBrush Color="#FF646352" Opacity="1"/>
            </Button.Foreground>
        </Button>
        <Button x:ConnectionId='4' x:Name="Seven" Style="{StaticResource InputButton}" Content="7"  
                                    Grid.Row="4" 
                Grid.Column="0" Background="BurlyWood"/>
        <Button x:ConnectionId='5' x:Name="Four" Style="{StaticResource InputButton}" Content="4" 
                                   Grid.Row="5" 
                Grid.Column="0" Background="BurlyWood" />
        <Button x:ConnectionId='6' x:Name="One" Style="{StaticResource InputButton}" Content="1" 
                                  Grid.Row="6" 
                Grid.Column="0" Background="BurlyWood" />
        <Button x:ConnectionId='7' x:Name="Sign" Style="{StaticResource InputButton}" Content="+/-"  
                                   Grid.Row="7" 
                Grid.Column="0" Background="BurlyWood" />

        <Button x:ConnectionId='8' x:Name="Remove" Style="{StaticResource InputButton}" 
                Foreground="#FFEA3F0B"
                Content="CE"  
                                     Grid.Row="2" 
                Grid.Column="1"  Background="#FFDEA357" />
        <Button x:ConnectionId='9' x:Name="Pow2" Style="{StaticResource InputButton}"  
                                   Grid.Row="3" 
                Grid.Column="1" Background="#FFDEA357" >
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="x" FontSize="40" />
                <TextBlock Text="2" FontSize="20" />
            </StackPanel>
        </Button>
        <Button x:ConnectionId='10' x:Name="Eight" Style="{StaticResource InputButton}" Content="8" 
                                    Grid.Row="4" 
                Grid.Column="1" Background="BurlyWood" />
        <Button x:ConnectionId='11' x:Name="Five" Style="{StaticResource InputButton}" Content="5"  
                                   Grid.Row="5" 
                Grid.Column="1" Background="BurlyWood" />
        <Button x:ConnectionId='12' x:Name="Two" Style="{StaticResource InputButton}" Content="2"  
                                  Grid.Row="6" 
                Grid.Column="1" Background="BurlyWood" />
        <Button x:ConnectionId='13' x:Name="Zero" Style="{StaticResource InputButton}" Content="0"  
                                   Grid.Row="7" 
                Grid.Column="1" Background="BurlyWood"/>
        <Button x:ConnectionId='14' x:Name="RemoveAll" Style="{StaticResource InputButton}" Content="C"  
                                        Grid.Row="2" 
                Grid.Column="2" Background="#FFDEA357" Foreground="#FFEA3F0B"/>
        <Button x:ConnectionId='15' x:Name="Sqrt" Style="{StaticResource InputButton}"  
                                   Grid.Row="3" 
                Grid.Column="2" Background="#FFDEA357">
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="2" FontSize="15" />
                <TextBlock Text="√" Margin="0,10,0,0" FontFamily="Gabriola" />
                <TextBlock Text="X" FontSize="30" Margin="0,5,0,0" />
            </StackPanel>
        </Button>
        <Button x:ConnectionId='16' x:Name="Nine" Style="{StaticResource InputButton}" Content="9"  
                                   Grid.Row="4" 
                Grid.Column="2" Background="BurlyWood"/>
        <Button x:ConnectionId='17' x:Name="Six" Style="{StaticResource InputButton}" Content="6"  
                                  Grid.Row="5" 
                Grid.Column="2" Background="BurlyWood"/>
        <Button x:ConnectionId='18' x:Name="Three" Style="{StaticResource InputButton}" Content="3"  
                                    Grid.Row="6" 
                Grid.Column="2" Background="BurlyWood"/>
        <Button x:ConnectionId='19' x:Name="Point" Style="{StaticResource InputButton}" Content="."  
                                            Grid.Row="7" 
                        Grid.Column="2" Background="BurlyWood"/>
        <Button x:ConnectionId='20' x:Name="Back" Style="{StaticResource InputButton}" 
                                   Grid.Row="2" 
                Grid.Column="3" Background="#FFDEA357" RenderTransformOrigin="0.46,0.528">
            <TextBlock  Foreground="#FFEA3F0B"
                  Text="&#xE72B;" FontFamily="HoloLens MDL2 Assets" FontSize="25"  VerticalAlignment="Top" />
        </Button>
        <Button x:ConnectionId='21' x:Name="Division" Style="{StaticResource InputButton}" 
                                       Grid.Row="3" 
                Grid.Column="3" Background="#FFDEA357" RenderTransformOrigin="0.46,0.528">
            <TextBlock Text="&#x00F7;" FontFamily="Georgia" FontSize="50"/>
        </Button>
        <Button x:ConnectionId='22' x:Name="Multiply" Style="{StaticResource InputButton}"  Content="x"
                                       Grid.Row="4" 
                Grid.Column="3" Background="#FFDEA357" RenderTransformOrigin="0.46,0.528"/>

        <Button x:ConnectionId='23' x:Name="Subtraction" Style="{StaticResource InputButton}" 
                                          Grid.Row="5" 
                Grid.Column="3" Background="#FFDEA357" RenderTransformOrigin="0.46,0.528">
            <TextBlock Text="&#x002D;" FontFamily="Georgia" FontSize="70"/>
        </Button>
        <Button x:ConnectionId='24' x:Name="Add" Style="{StaticResource InputButton}"  Content="+"
                                  Grid.Row="6" 
                Grid.Column="3" Background="#FFDEA357" RenderTransformOrigin="0.46,0.528"/>
        <Button x:ConnectionId='25' x:Name="Equal" 
                Style="{StaticResource InputButton}"  Content="="
                                    Grid.Row="7" 
                Grid.Column="3" Background="#FFEA821B" RenderTransformOrigin="0.46,0.528"/>
        
    </Grid>
</Page>

