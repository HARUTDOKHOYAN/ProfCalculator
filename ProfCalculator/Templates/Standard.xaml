<UserControl
    x:Class="ProfCalculator.Templates.Standard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProfCalculator.Templates"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root" 
    SizeChanged="Root_SizeChanged">


    <Grid SizeChanged="Root_SizeChanged" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Operator" 
                   TextAlignment="End" 
                   FontSize="20" 
                   Grid.Row="0"  />
        <TextBlock Text="Number" 
                   TextAlignment="End" 
                   FontSize="40" 
                   Grid.Row="1" 
                   RenderTransformOrigin="0.5,0.5" >

        </TextBlock>
        <ListView  x:Name="ListviewRoot"  
                  Grid.Row="2"  
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  ItemsSource="{Binding ElementName=Root , 
                                        Path=uiViewModel.buttoncontents,
                                        Mode=OneWay}" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid MaximumRowsOrColumns="4" 
                                   Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate >
                    <ListView  ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                              Height="{Binding Height , Mode=OneWay}"
                              Width="{Binding Width , Mode=OneWay}">
                        <TextBlock Text="{Binding Content ,Mode=OneWay}" FontSize="10"/>
                    </ListView>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
